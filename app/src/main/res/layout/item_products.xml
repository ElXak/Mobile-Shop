<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_card"
        android:layout_width="@dimen/products_item_card_width"
        android:layout_height="@dimen/products_item_card_height"
        android:layout_marginStart="@dimen/products_item_card_layout_marginHorizontal"
        android:layout_marginBottom="@dimen/products_item_card_layout_marginBottom"
        app:cardCornerRadius="@dimen/products_item_card_radius"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="@dimen/products_item_card_padding"
        android:paddingVertical="@dimen/products_item_card_paddingTop"
        android:layout_gravity="center">

        <!--androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/products_item_card_padding"
                android:paddingTop="@dimen/products_item_card_paddingTop"
                android:paddingBottom="@dimen/products_item_card_paddingBottom"
                android:layout_gravity="center"-->

            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:maxHeight="@dimen/products_item_image_maxHeight"
                android:scaleType="centerCrop"
                app:layout_constrainedHeight="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_max="@dimen/products_item_image_maxHeight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

        <TextView android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/products_item_name_size"
            tools:text="T-shirt"
            android:textColor="@color/colorPrimaryDark"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/products_item_name_autoMinSize"
            android:autoSizeMaxTextSize="@dimen/products_item_name_autoMaxSize"
            android:layout_gravity="bottom"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/price_text"
            app:layout_constraintStart_toStartOf="@id/product_card"/>

        <TextView android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/products_item_price_size"
            android:textStyle="bold"
            tools:text="$35.45"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/product_card"
            app:layout_constraintStart_toStartOf="@id/product_card"/>

        <ImageView android:id="@+id/rating_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedHeight="true"
            android:maxHeight="@dimen/searchResult_item_image_maxHeight"
            app:layout_constraintHeight_max="@dimen/searchResult_item_image_maxHeight"
            app:layout_constraintBottom_toBottomOf="@+id/price_text"
            app:layout_constraintEnd_toEndOf="@id/product_card"
            app:srcCompat="@drawable/ic_rating"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toTopOf="@+id/price_text"/>

        <TextView android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/searchResult_item_rating_size"
            android:textStyle="bold"
            tools:text="4.9"
            android:textColor="@color/colorSecondary"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="14dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/products_item_rating_marginStart"
            app:layout_constraintBottom_toBottomOf="@+id/price_text"
            app:layout_constraintTop_toTopOf="@+id/price_text"
            android:layout_marginBottom="8dp"/>

        <!--/androidx.constraintlayout.widget.ConstraintLayout-->

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>